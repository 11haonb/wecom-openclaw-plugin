{
  "name": "wecom-openclaw-integration",
  "version": "1.0.0",
  "type": "module",
  "description": "WeCom (企业微信) integration plugin for OpenClaw - Connect your AI agent to WeCom",
  "author": "liujinqi <liujinqi@bit.edu.cn>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/liujinqi/wecom-openclaw-integration"
  },
  "keywords": [
    "wecom",
    "wechat-work",
    "企业微信",
    "openclaw",
    "ai-agent",
    "chatbot",
    "automation"
  ],
  "openclaw": {
    "extensions": [
      "./index.ts"
    ],
    "channel": {
      "id": "wecom",
      "label": "WeCom",
      "selectionLabel": "WeCom (企业微信)",
      "detailLabel": "WeCom Bot",
      "docsPath": "/channels/wecom",
      "docsLabel": "wecom",
      "blurb": "企业微信应用消息，支持消息加解密和回调。",
      "aliases": [
        "wework",
        "企业微信",
        "qywx"
      ],
      "order": 60
    },
    "install": {
      "npmSpec": "wecom-openclaw-integration",
      "localPath": "extensions/wecom",
      "defaultChoice": "local",
      "pluginId": "wecom"
    }
  },
  "dependencies": {
    "fast-xml-parser": "^4.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "openclaw": "workspace:*"
  },
  "peerDependencies": {
    "openclaw": ">=2026.1.26"
  }
}
